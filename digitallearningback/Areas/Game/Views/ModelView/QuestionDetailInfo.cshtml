@model digitallearningback.Models.Question
<!DOCTYPE html>
<html>
<head>
</head>
<body>
    <div class="modal-header">     
        <h4 class="modal-title" id="myModalLabel">
            <font size="5" color="blue">
                <b>@Model.text</b>
            </font>
            @if (Model.pic_path != null)
            {
                <img src="@Model.pic_path" width="300">
            }
        </h4>
    </div>
    <div class="modal-body">
        <table border="0" class="table table-hover">
            @{int index = 0;}
            @foreach (var item in Model.Answer)
            {
                        index++;
                <tr class="warning" >
                    <td>@index</td>
                    <td class="content">
                        @if (item.text != null)
                        {
                                @Html.Raw(item.text)
                        }
                        @if (item.pic_path != null)
                        {
                                <img src="@item.pic_path" width="150" height="100">
                        }
                        <font color="blue">@(item.id == ViewBag.selectaid ? "您選擇的答案" : "")</font>
                        <font color="red">@(item.is_correct == 1 ? "正確答案" : "")</font>
                    </td>
                </tr>
            }
        </table>
        <form mehtod="post" action="">
            <input type="hidden" name="qindex" value="${qindex}">
            <button type="submit" style="">繼續</button>
        </form>
    </div>
</body>
</html>
