@model digitallearningback.Models.Answer

<h2>@Model.Question.text</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.text)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.text)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.is_correct)
        </dt>

        <dd>
            @Html.Raw(Model.is_correct == 1 ? "是" : "否")
        </dd>

        
        @if (Model.pic_path != null)
        {
            <dt>
                @Html.DisplayNameFor(model => model.pic_path)
            </dt>

            <dd>
                <img src="@Model.pic_path" height="200" width="400">
            </dd>
        }

    </dl>

    @using (Html.BeginForm("Delete", "Answers", FormMethod.Post)) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            @Html.HiddenFor(model => model.id)
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index" , new { qid = Model.qid})
        </div>
    }
</div>
